<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/id_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/holo_green_light" />


    <TextView
        android:id="@+id/id_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/id_picture"
        android:text=""
        android:textSize="38dp" />

    <TextView
        android:id="@+id/id_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/id_name"
        android:text=""
        android:textSize="38dp" />

    <TextView
        android:id="@+id/id_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_name"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/id_picture"
        android:text=""
        android:textSize="24dp" />

    <Button
        android:id="@+id/button"
        android:background="@android:color/holo_orange_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_picture"
        android:layout_marginTop="20dp"
        android:text="@string/button" />

    <TextView
        android:id="@+id/id_courses"
        android:layout_below="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="23dp"/>


</RelativeLayout>